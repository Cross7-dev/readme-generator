{
    "name": "readme-generator",
    "version": "0.0.1",
    "description": "This project was born mainly to satisfy my desire for knowledge and to simplify my workflow. Being a curious (and also lazy) developer I have always wondered how avoid to waste my working time to write README.md files who fits perfectly project by project and that's why I wrote a tool to help me simplify and speed up these processes.",
    "main": "./index.js",
    "bin": {
        "generate-readme": "./index.js"
    },
    "homepage": "https://github.com/ibbatta/readme-generator",
    "repository": {
        "type": "git",
        "url": "https://github.com/ibbatta/readme-generator.git"
    },
    "bugs": {
        "url": "https://github.com/ibbatta/readme-generator/issues",
        "email": "maurizio.battaghini+tech@gmail.com"
    },
    "author": {
        "name": "Maurizio Battaghini",
        "email": "maurizio.battaghini+tech@gmail.com",
        "url": "https://twitter.com/battago",
        "social": {
            "github": "https://github.com/ibbatta",
            "twitter": "https://twitter.com/battago"
        }
    },
    "contributors": [{
        "name": "Pietro Siccardi",
        "url": "http://github.com/pietrosiccardi",
        "reason": "Tactical support for the template engine"
    }],
    "keywords": [
        "readme",
        "readme-template",
        "readme-generator",
        "readme-md",
        "generator",
        "cli",
        "readme-standard",
        "readme-quality"
    ],
    "engines": {
        "node": ">= 9.10.x",
        "yarn": ">= 1.9.x",
        "npm": ">= 6.3.x"
    },
    "license": "MIT",
    "private": true,
    "scripts": {
        "start": "clear && babel-node -- ./index.js",
        "build": "exit 1",
        "test": "lint-staged",
        "changelog": "auto-changelog",
        "version": "auto-changelog -p && git add CHANGELOG.md"
    },
    "dependencies": {
        "boxen": "^4.1.0",
        "chalk": "^2.4.2",
        "figlet": "^1.2.3",
        "handlebars": "^4.1.2",
        "inquirer": "^6.3.1",
        "lodash": "^4.17.11",
        "sprintf-js": "^1.1.2"
    },
    "devDependencies": {
        "@babel/core": "^7.3.4",
        "@babel/node": "^7.4.5",
        "@babel/preset-env": "^7.3.4",
        "auto-changelog": "^1.13.0",
        "babel-eslint": "^10.0.1",
        "babel-jest": "^24.1.0",
        "babel-loader": "^8.0.5",
        "eslint": "^5.14.1",
        "eslint-config-airbnb": "17.1.0",
        "eslint-plugin-import": "^2.12.0",
        "eslint-plugin-jsx-a11y": "^6.0.3",
        "husky": "^3.0.0",
        "jest": "^24.8.0",
        "lint-staged": "^8.2.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn test",
            "pre-push": "auto-changelog && git add CHANGELOG.md"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "git add"
        ]
    },
    "auto-changelog": {
        "output": "CHANGELOG.md",
        "template": "changelog-template.hbs",
        "unreleased": true,
        "commitLimit": 10,
        "includeBranch": [
            "master",
            "develop",
            "*"
        ]
    }
}
